{% for type in sonata_flashmessages_types() %}
    {% set domain = domain is defined ? domain : null %}
    {% for message in sonata_flashmessages_get(type, domain) %}
        <div class="alert alert-{{ type|sonata_status_class }}{% if dismissable is defined %}alert-dismissable{% endif %}">
            {% if dismissable is defined %}<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>{% endif %}
            {{ message|trans|raw }}
        </div>
    {% endfor %}
{% endfor %}
